package com.zmen.backend.repository;

import com.zmen.backend.entity.DiaChiNguoiDung;
import com.zmen.backend.entity.User;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import java.util.List;
import java.util.Optional;

@Repository
public interface DiaChiNguoiDungRepository extends JpaRepository<DiaChiNguoiDung, Long> {
    
    List<DiaChiNguoiDung> findByNguoiDungAndTrangThaiTrue(User nguoiDung);
    
    List<DiaChiNguoiDung> findByNguoiDungIdAndTrangThaiTrue(Long nguoiDungId);
    
    Optional<DiaChiNguoiDung> findByNguoiDungAndLaDiaChiMacDinhTrue(User nguoiDung);
    
    Optional<DiaChiNguoiDung> findByNguoiDungIdAndLaDiaChiMacDinhTrue(Long nguoiDungId);
    
    @Query("SELECT d FROM DiaChiNguoiDung d WHERE d.nguoiDung.id = :nguoiDungId AND d.id = :id AND d.trangThai = true")
    Optional<DiaChiNguoiDung> findByNguoiDungIdAndIdAndTrangThaiTrue(@Param("nguoiDungId") Long nguoiDungId, @Param("id") Long id);
    
    long countByNguoiDungAndTrangThaiTrue(User nguoiDung);
}

