package com.zmen.backend.repository;

import com.zmen.backend.entity.GioHang;
import com.zmen.backend.entity.User;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import java.util.List;
import java.util.Optional;

@Repository
public interface GioHangRepository extends JpaRepository<GioHang, Long> {
    
    Optional<GioHang> findByNguoiDungAndTrangThai(User nguoiDung, String trangThai);
    
    Optional<GioHang> findByNguoiDungIdAndTrangThai(Long nguoiDungId, String trangThai);
    
    Optional<GioHang> findBySessionIdAndTrangThai(String sessionId, String trangThai);
    
    List<GioHang> findByTrangThai(String trangThai);
    
    List<GioHang> findByNguoiDung(User nguoiDung);
}

