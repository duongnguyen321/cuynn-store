package com.zmen.backend.repository;

import com.zmen.backend.entity.BienTheSanPham;
import com.zmen.backend.entity.Product;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import java.util.List;
import java.util.Optional;

@Repository
public interface BienTheSanPhamRepository extends JpaRepository<BienTheSanPham, Long> {
    
    List<BienTheSanPham> findBySanPhamAndTrangThaiTrue(Product sanPham);
    
    List<BienTheSanPham> findBySanPhamIdAndTrangThaiTrue(Long sanPhamId);
    
    Optional<BienTheSanPham> findByMaBienThe(String maBienThe);
    
    @Query("SELECT b FROM BienTheSanPham b WHERE b.sanPham = :sanPham AND b.mauSac = :mauSac AND b.kichThuoc = :kichThuoc AND b.trangThai = true")
    Optional<BienTheSanPham> findBySanPhamAndMauSacAndKichThuoc(@Param("sanPham") Product sanPham, 
                                                               @Param("mauSac") String mauSac, 
                                                               @Param("kichThuoc") String kichThuoc);
    
    @Query("SELECT b FROM BienTheSanPham b WHERE b.sanPham.id = :sanPhamId AND b.soLuongTonKho > 0 AND b.trangThai = true")
    List<BienTheSanPham> findAvailableVariantsByProductId(@Param("sanPhamId") Long sanPhamId);
    
    @Query("SELECT COUNT(b) FROM BienTheSanPham b WHERE b.sanPham = :sanPham AND b.trangThai = true")
    long countBySanPhamAndTrangThaiTrue(@Param("sanPham") Product sanPham);
    
    boolean existsByMaBienThe(String maBienThe);
}

